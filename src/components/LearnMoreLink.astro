---
// src/components/LearnMoreLink.astro
export interface Props {
  href: string;
  class?: string; // Allow for custom classes
}

const { href, class: extraClasses = "" } = Astro.props;

const baseClasses = "inline-flex items-center text-blue-600 hover:text-blue-800 transition duration-300"; // Style as a link
const arrowClasses = "ml-1 w-4 h-4"; // Style for the arrow
const combinedClasses = `${baseClasses} ${extraClasses}`;
---

<a href={href} class={combinedClasses}>
  <slot /> {/* Text of the link goes here */}
  <svg
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 20 20"
    fill="currentColor"
    class={arrowClasses}
    aria-hidden="true"
  >
    <path
      fill-rule="evenodd"
      d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
      clip-rule="evenodd"
    />
  </svg>
</a>
---
// src/pages/index.astro
import { Image } from 'astro:assets';
import heroImg from '../assets/hero-image.png';
import newHeroImg from '../assets/600x400.svg';
import OrderButton from '../components/OrderButton.astro';
import LearnMoreLink from '../components/LearnMoreLink.astro';
---

<section class="bg-white py-20">
  <div class="container mx-auto px-4">
    <div class="flex flex-col lg:flex-row items-center">
      <div class="lg:w-1/2 lg:pr-12">
        <h1 class="text-5xl lg:text-6xl font-serif font-bold text-gray-900 mb-6">
          The first daily care motivation platform
        </h1>
        <p class="text-xl text-gray-700 mb-8">
          Your Company uses behavioral science to help people create, establish, and maintain daily behaviors that improve their lives. Health plans see reduced utilization costs, substantial health outcomes, increased quality and Star Ratings.
        </p>
        <div class="flex items-center space-x-4"> {/* Wrap in a div, add space-x */}
          <OrderButton href="/order">Order Online</OrderButton>
          <LearnMoreLink href="/features">Learn More</LearnMoreLink>
        </div>
      </div>
      <div class="lg:w-1/2 mt-10 lg:mt-0">
        <Image
          src={newHeroImg}
          alt="Description of your image"
          class="rounded-lg shadow-xl"
          width={600}
          height={400}
        />
      </div>
    </div>
  </div>
</section>
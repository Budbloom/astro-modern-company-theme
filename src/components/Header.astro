---
// src/components/Header.astro
import { Image } from 'astro:assets';
import logoImg from '../assets/logo.png';

// No navItems needed anymore
---

<header class="fixed w-full top-0 z-50 bg-white shadow-md">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex font-serif font-bold items-center">
      <Image
        src={logoImg}
        alt="Company Logo Image"
        class="rounded-lg"
        width={48}
        height={48}
      />
      <span class="ml-2">Your Company</span>
    </a>
    {/* Remove the entire <nav> element */}
    <a href="/#" class="bg-primary-500 text-white px-4 py-2 rounded hover:bg-primary-600 transition duration-150 ease-in-out">
      Contact Us
    </a>
  </div>
</header>

<div class="header-spacer"></div>

<style>
  .header-spacer {
    height: 64px; /* Adjust to match your header's height */
  }
</style>
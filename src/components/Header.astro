---
// src/components/Header.astro
import { Image } from 'astro:assets';
import logoImg from '../assets/logo.png';
import OrderButton from './templates/OrderButton.astro'; // Import your existing OrderButton

---

<header class="fixed w-full top-0 z-50 bg-white shadow-md">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex font-serif font-bold items-center">
      <Image
        src={logoImg}
        alt="Company Logo Image"
        class="rounded-lg"
        width={48}
        height={48}
      />
      <span class="ml-2">Your Company</span>
    </a>
    <OrderButton />
  </div>
</header>

<div class="header-spacer"></div>

<style>
  .header-spacer {
    height: 74px; /* Adjust to match header height + padding */
  }
</style>
---
interface Props {
  text: string;
  size?: 'small' | 'medium' | 'large';
  color?: string;
  className?: string;
}

const { text, size = 'medium', color = 'text-gray-900', className = '' } = Astro.props;

const sizeClasses = {
  small: 'text-xl',
  medium: 'text-4xl',
  large: 'text-5xl',
};
---

<h2 class={`font-sans font-bold mb-6 ${sizeClasses[size]} ${color} ${className}`}>
  {text}
</h2>
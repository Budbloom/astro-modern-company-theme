---
// src/components/OrderButton.astro
export interface Props {
  href?: string;
  text?: string;
  bgColor?: string; // Renamed 'color' to 'bgColor' for clarity
  textColor?: string; // Added textColor prop
  class?: string;
}

const {
  href = "/",
  text = "Order Now",
  bgColor = "primary",
  textColor = "white", // Default text color
  class: extraClasses = ""
} = Astro.props;

const buttonClasses = `bg-${bgColor} hover:bg-${bgColor}-dark text-${textColor} font-normal py-2.5 px-8 rounded transition duration-300 ${extraClasses}`;

---

<a
  href={href}
  class={buttonClasses}
>
  {text}
</a>